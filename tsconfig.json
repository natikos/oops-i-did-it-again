{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2018",
		"noImplicitAny": false,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"outDir": "build/",
		"rootDir": "./",
		"allowJs": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"inlineSourceMap": true,
		"lib": [
			"es6",
			"es7",
			"dom",
			"es2015.core",
			"es2015.collection",
			"es2015.generator",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.reflect",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext.asynciterable",
			"es2020.promise",
			"es2019",
			"es2020",
		],
		"jsx": "react"
	},
	"include": [
		"./**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		".git",
		"public",
		"test",
	]
}
